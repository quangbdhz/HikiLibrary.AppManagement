<Window x:Class="Library_Management.Admin.StatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management.Admin"
        Icon="/Images/Library_Icon.ico"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:Library_Management.UserControlLibrary"       
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        DataContext="{StaticResource StatisticVM}"
        
        
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Name="staticWindow"
        
        Title="Static" Height="730" Width="1295">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="StyleListView" TargetType="DataGridRow">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>

    <Grid Background="#2d3436">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=staticWindow}"></uc:ControlBarUC>
        </Grid>

        <Grid Grid.Row="1">
            <materialDesign:Card Margin="4">
                <dragablz:TabablzControl Name="texxt">
                    <dragablz:TabablzControl.InterTabController>
                        <dragablz:InterTabController />
                    </dragablz:TabablzControl.InterTabController>

                    <TabItem Header="Human">
                        <Grid>
                            <TabControl TabStripPlacement="Left">
                                <TabControl.Resources>
                                    <Style TargetType="{x:Type TabItem}">
                                        <Setter Property="FontWeight" Value="Bold"></Setter>
                                        <Setter Property="Height" Value="70"></Setter>
                                        <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <ContentPresenter Content="{TemplateBinding Content}">
                                                        <ContentPresenter.LayoutTransform>
                                                            <RotateTransform Angle="270" />
                                                        </ContentPresenter.LayoutTransform>
                                                    </ContentPresenter>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="3" />

                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" BorderThickness="1,1,1,1" BorderBrush="Black" CornerRadius="4,4,4,4" Margin="0,3">
                                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="0,1"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#badc58" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>


                                </TabControl.Resources>

                                <TabItem Header="General">
                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <lvc:CartesianChart  Grid.Row="2" Margin="5" Series="{Binding SeriesCollectionHuman}" LegendLocation="Top">

                                            <lvc:CartesianChart.AxisX>

                                                <lvc:Axis Title="Human" Labels="{x:Null}">
                                                    <lvc:Axis.Separator>
                                                        <lvc:Separator Margin="5 0" Step="1" />
                                                    </lvc:Axis.Separator>

                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                        </lvc:CartesianChart>

                                        <WrapPanel HorizontalAlignment="Center" Margin="0 2 0 0" Grid.Row="0">
                                            <Button FontFamily="Segoe UI" Background="#7efff5" BorderBrush="Black" BorderThickness="1"  Foreground="Black" Command="{Binding RefreshHumanCommand}" Width="100" Content="Refresh"></Button>

                                            <Button FontFamily="Segoe UI"  Background="#ffcccc" BorderBrush="Black" BorderThickness="1" Foreground="Black" Margin="5 0 0 0" Command="{Binding ResetHumanScoreCommand}" Width="100" Content="Reset"></Button>

                                        </WrapPanel>
                                    </Grid>
                                </TabItem>

                                <TabItem Header="Details">
                                    <Grid Background="Black">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <materialDesign:Card Grid.Row="0" Margin="3 2 2 0">
                                            <DockPanel Margin="0 2 0 3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0">
                                                        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                                            <Button Command="{Binding HumanExcelCommand}" Margin="4 0 0 0" Width="100" ToolTip="Thêm"
                                                                Padding="0" Background="#ff6b6b" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                                                <WrapPanel>
                                                                    <Image Margin="-15 0 0 0"  Source="/Images/Icon_Button/Excel.png"></Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="   Excel"></TextBlock>
                                                                </WrapPanel>
                                                            </Button>

                                                            <Button Command="{Binding HumanWordCommand}" Margin="4 0 0 0" Width="100" ToolTip="Thêm"
                                                                Padding="0" Background="#feca57" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                                                <WrapPanel>
                                                                    <Image Margin="-15 0 0 0"  Source="/Images/Icon_Button/Word.png"></Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="   Word"></TextBlock>
                                                                </WrapPanel>
                                                            </Button>

                                                            <Button Command="{Binding HumanPrintCommand}" Margin="4 0 0 0" Width="100" ToolTip="Thêm"
                                                                Padding="0" Background="#a4b0be" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                                                <WrapPanel>
                                                                    <Image Margin="-15 0 0 0"  Source="/Images/Icon_Button/Print.png"></Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="   Print"></TextBlock>
                                                                </WrapPanel>
                                                            </Button>

                                                        </WrapPanel>
                                                    </Grid>

                                                    <Grid Grid.Column="1">
                                                        <WrapPanel HorizontalAlignment="Center">
                                                            <materialDesign:Card Grid.Column="1" Background="Black">
                                                                <materialDesign:ColorZone Mode="Dark" CornerRadius="2"  Panel.ZIndex="1" Margin="0" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <Button FontFamily="Segoe UI" IsEnabled="True" Grid.Column="0" Style="{DynamicResource MaterialDesignToolButton}">
                                                                            <materialDesign:PackIcon Kind="Magnify" Opacity=".99" />
                                                                        </Button>

                                                                        <TextBox FontFamily="Segoe UI" FontWeight="Normal" Text="{Binding DisplayNameSearchCustomer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                                                Grid.Column="1" Margin="8 0 0 0" materialDesign:HintAssist.Hint="Search the staff"
                                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                                Name="tb_human" BorderThickness="0" MinWidth="200" VerticalAlignment="Center" />

                                                                        <Grid  Grid.Column="2">
                                                                            <ComboBox FontFamily="Segoe UI" FontWeight="Normal" SelectedIndex="0" Margin="8 0 0 0" BorderThickness="0"
                                                                                materialDesign:ColorZoneAssist.Mode="Inverted"
                                                                                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                                                                                BorderBrush="{DynamicResource MaterialDesignPaper}">
                                                                                <ComboBoxItem>Full Name</ComboBoxItem>
                                                                                <ComboBoxItem>Score Input</ComboBoxItem>
                                                                                <ComboBoxItem>Score Output</ComboBoxItem>
                                                                            </ComboBox>
                                                                        </Grid>
                                                                    </Grid>
                                                                </materialDesign:ColorZone>

                                                            </materialDesign:Card>
                                                        </WrapPanel>
                                                    </Grid>

                                                    <Grid Grid.Column="2">
                                                        <WrapPanel HorizontalAlignment="Right">
                                                            <TextBlock FontFamily="Segoe UI" Margin="10 0 10 0" Text="Sort by" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold"></TextBlock>

                                                            <CheckBox FontFamily="Segoe UI" FontWeight="Normal" Style="{StaticResource MaterialDesignFilterChipOutlineCheckBox}" Margin="0 0 10 0"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green">Name</CheckBox>

                                                            <CheckBox FontFamily="Segoe UI" FontWeight="Normal" Style="{StaticResource MaterialDesignFilterChipOutlineCheckBox}" Margin="0 0 10 0"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green">Input</CheckBox>

                                                            <CheckBox FontFamily="Segoe UI" FontWeight="Normal" Style="{StaticResource MaterialDesignFilterChipOutlineCheckBox}" Margin="0 0 10 0"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green">Output</CheckBox>

                                                            <CheckBox VerticalAlignment="Center" FontFamily="Segoe UI"  Content="ASC" Margin="0 0 10 0"></CheckBox>

                                                            <CheckBox VerticalAlignment="Center"  FontFamily="Segoe UI"  Content="DESC" Margin="0 0 10 0"></CheckBox>
                                                        </WrapPanel>
                                                    </Grid>
                                                </Grid>
                                            </DockPanel>
                                        </materialDesign:Card>

                                        <materialDesign:Card Grid.Row="1"  Margin="3 2 2 2">
                                            <ScrollViewer  VerticalScrollBarVisibility="Auto">
                                                <ListView ItemsSource="{Binding LvHuman}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" TextElement.FontFamily="Segoe UI" TextElement.FontWeight="Normal">
                                                    <ListView.View>
                                                        <GridView>
                                                            <GridView.ColumnHeaderContainerStyle>
                                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                                                <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="Transparent">
                                                                                    <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,0" Width="{TemplateBinding Width}" TextAlignment="Center" />
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                                                    <Setter Property="Foreground" Value="Black" />
                                                                    <Setter Property="FontWeight" Value="DemiBold" />
                                                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                                                    <Setter Property="FontSize" Value="14" />
                                                                </Style>
                                                            </GridView.ColumnHeaderContainerStyle>

                                                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" ></GridViewColumn>
                                                            <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding DisplayName}"></GridViewColumn>
                                                            <GridViewColumn Header="Date Of Birth" DisplayMemberBinding="{Binding DateOfBirth, StringFormat=dd/MM/yyyy}"></GridViewColumn>
                                                            <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}"></GridViewColumn>
                                                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"></GridViewColumn>
                                                            <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}"></GridViewColumn>

                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>
                                            </ScrollViewer>
                                        </materialDesign:Card>
                                    </Grid>

                                </TabItem>
                            </TabControl>


                        </Grid>

                    </TabItem>

                    <TabItem Header="Staff">
                        <Grid>
                            <TabControl TabStripPlacement="Left">
                                <TabControl.Resources>
                                    <Style TargetType="{x:Type TabItem}">
                                        <Setter Property="FontWeight" Value="Bold"></Setter>
                                        <Setter Property="Height" Value="70"></Setter>
                                        <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <ContentPresenter Content="{TemplateBinding Content}">
                                                        <ContentPresenter.LayoutTransform>
                                                            <RotateTransform Angle="270" />
                                                        </ContentPresenter.LayoutTransform>
                                                    </ContentPresenter>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="3" />

                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" BorderThickness="1,1,1,1" BorderBrush="Black" CornerRadius="4,4,4,4" Margin="0,3">
                                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="0,1"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#badc58" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>


                                </TabControl.Resources>

                                <TabItem Header="General">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <lvc:CartesianChart Grid.Row="1" Margin="5" Series="{Binding SeriesCollectionStaff}" LegendLocation="Top">

                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Human" Labels="{Binding LabelsStaff}">
                                                    <lvc:Axis.Separator>
                                                        <lvc:Separator Step="1" />
                                                    </lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Score" LabelFormatter="{Binding FormatterStaff}"></lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>

                                        <WrapPanel HorizontalAlignment="Center" Margin="0 2 0 0" Grid.Row="0">
                                            <Button FontFamily="Segoe UI" Background="#7efff5" BorderBrush="Black" BorderThickness="1"  Foreground="Black" Command="{Binding RefreshStaffCommand}" Width="100" Content="Refresh"></Button>

                                            <Button FontFamily="Segoe UI"  Background="#ffcccc" BorderBrush="Black" BorderThickness="1" Foreground="Black" Margin="5 0 0 0" Command="{Binding RefreshStaffCommand}" Width="100" Content="Reset"></Button>

                                        </WrapPanel>
                                    </Grid>
                                </TabItem>

                                <TabItem Header="Details">
                                    <Grid Background="Black">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <materialDesign:Card Grid.Row="0" Margin="3 2 2 0">
                                            <DockPanel Margin="0 2 0 3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0">
                                                        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                                            <Button Command="{Binding StaffExcelCommand}" Margin="4 0 0 0" Width="100" ToolTip="Thêm"
                                                                Padding="0" Background="#ff6b6b" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                                                <WrapPanel>
                                                                    <Image Margin="-15 0 0 0"  Source="/Images/Icon_Button/Excel.png"></Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="   Excel"></TextBlock>
                                                                </WrapPanel>
                                                            </Button>

                                                            <Button Command="{Binding StaffWordCommand}" Margin="4 0 0 0" Width="100" ToolTip="Thêm"
                                                                Padding="0" Background="#feca57" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                                                <WrapPanel>
                                                                    <Image Margin="-15 0 0 0"  Source="/Images/Icon_Button/Word.png"></Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="   Word"></TextBlock>
                                                                </WrapPanel>
                                                            </Button>

                                                            <Button Command="{Binding StaffPrintCommand}" Margin="4 0 0 0" Width="100" ToolTip="Thêm"
                                                                Padding="0" Background="#a4b0be" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                                                <WrapPanel>
                                                                    <Image Margin="-15 0 0 0"  Source="/Images/Icon_Button/Print.png"></Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="   Print"></TextBlock>
                                                                </WrapPanel>
                                                            </Button>

                                                        </WrapPanel>
                                                    </Grid>

                                                    <Grid Grid.Column="1">
                                                        <WrapPanel HorizontalAlignment="Center">
                                                            <materialDesign:Card Grid.Column="1" Background="Black">
                                                                <materialDesign:ColorZone Mode="Dark" CornerRadius="2"  Panel.ZIndex="1" Margin="0" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <Button FontFamily="Segoe UI" IsEnabled="True" Grid.Column="0" Style="{DynamicResource MaterialDesignToolButton}">
                                                                            <materialDesign:PackIcon Kind="Magnify" Opacity=".99" />
                                                                        </Button>

                                                                        <TextBox FontFamily="Segoe UI" FontWeight="Normal" Text="{Binding DisplayNameSearchCustomer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                                                Grid.Column="1" Margin="8 0 0 0" materialDesign:HintAssist.Hint="Search the staff"
                                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                                Name="tb_customer" BorderThickness="0" MinWidth="200" VerticalAlignment="Center" />

                                                                        <Grid  Grid.Column="2">
                                                                            <ComboBox FontFamily="Segoe UI" FontWeight="Normal" SelectedIndex="0" Margin="8 0 0 0" BorderThickness="0"
                                                                                materialDesign:ColorZoneAssist.Mode="Inverted"
                                                                                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                                                                                BorderBrush="{DynamicResource MaterialDesignPaper}">
                                                                                <ComboBoxItem>Full Name</ComboBoxItem>
                                                                                <ComboBoxItem>Score Input</ComboBoxItem>
                                                                                <ComboBoxItem>Score Output</ComboBoxItem>
                                                                            </ComboBox>
                                                                        </Grid>
                                                                    </Grid>
                                                                </materialDesign:ColorZone>

                                                            </materialDesign:Card>
                                                        </WrapPanel>
                                                    </Grid>

                                                    <Grid Grid.Column="2">
                                                        <WrapPanel HorizontalAlignment="Right">
                                                            <TextBlock FontFamily="Segoe UI" Margin="10 0 10 0" Text="Sort by" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold"></TextBlock>

                                                            <CheckBox FontFamily="Segoe UI" FontWeight="Normal" Style="{StaticResource MaterialDesignFilterChipOutlineCheckBox}" Margin="0 0 10 0"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green">Name</CheckBox>

                                                            <CheckBox FontFamily="Segoe UI" FontWeight="Normal" Style="{StaticResource MaterialDesignFilterChipOutlineCheckBox}" Margin="0 0 10 0"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green">Input</CheckBox>

                                                            <CheckBox FontFamily="Segoe UI" FontWeight="Normal" Style="{StaticResource MaterialDesignFilterChipOutlineCheckBox}" Margin="0 0 10 0"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green">Output</CheckBox>

                                                            <CheckBox VerticalAlignment="Center" FontFamily="Segoe UI"  Content="ASC" Margin="0 0 10 0"></CheckBox>

                                                            <CheckBox VerticalAlignment="Center"  FontFamily="Segoe UI"  Content="DESC" Margin="0 0 10 0"></CheckBox>
                                                        </WrapPanel>
                                                    </Grid>
                                                </Grid>
                                            </DockPanel>
                                        </materialDesign:Card>

                                        <materialDesign:Card Grid.Row="1"  Margin="3 2 2 2">
                                            <ScrollViewer  VerticalScrollBarVisibility="Auto">
                                                <ListView ItemsSource="{Binding LvUserStaff}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" TextElement.FontFamily="Segoe UI" TextElement.FontWeight="Normal">
                                                    <ListView.View>
                                                        <GridView>
                                                            <GridView.ColumnHeaderContainerStyle>
                                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                                                <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="Transparent">
                                                                                    <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,0" Width="{TemplateBinding Width}" TextAlignment="Center" />
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                                                    <Setter Property="Foreground" Value="Black" />
                                                                    <Setter Property="FontWeight" Value="DemiBold" />
                                                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                                                    <Setter Property="FontSize" Value="14" />
                                                                </Style>
                                                            </GridView.ColumnHeaderContainerStyle>

                                                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" ></GridViewColumn>
                                                            <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding Human.DisplayName}"></GridViewColumn>
                                                            <GridViewColumn Header="Score Input" DisplayMemberBinding="{Binding ScoreInputBook}"></GridViewColumn>
                                                            <GridViewColumn Header="Score Output" DisplayMemberBinding="{Binding ScoreOuputBook}"></GridViewColumn>

                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>
                                            </ScrollViewer>
                                        </materialDesign:Card>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>

                    </TabItem>

                    <TabItem Header="Subject">
                        <Grid>
                            <TabControl TabStripPlacement="Left">
                                <TabControl.Resources>
                                    <Style TargetType="{x:Type TabItem}">
                                        <Setter Property="FontWeight" Value="Bold"></Setter>
                                        <Setter Property="Height" Value="70"></Setter>
                                        <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <ContentPresenter Content="{TemplateBinding Content}">
                                                        <ContentPresenter.LayoutTransform>
                                                            <RotateTransform Angle="270" />
                                                        </ContentPresenter.LayoutTransform>
                                                    </ContentPresenter>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="3" />

                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border Name="Border" BorderThickness="1,1,1,1" BorderBrush="Black" CornerRadius="4,4,4,4" Margin="0,3">
                                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="0,1"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#badc58" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>

                                <TabItem Header="General">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

                                            <lvc:CartesianChart Margin="5" Series="{Binding SeriesCollectionSubject, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" LegendLocation="Top" >
                                                <lvc:CartesianChart.AxisY>
                                                    <lvc:Axis Title="Score" FontSize="14" Foreground="Black" LabelFormatter="{Binding FormatterSubject}"></lvc:Axis>
                                                </lvc:CartesianChart.AxisY>
                                                <lvc:CartesianChart.AxisX>
                                                    <lvc:Axis Title="Subjects" FontSize="14" Foreground="Black" Labels="{Binding LabelsSubject}">
                                                        <lvc:Axis.Separator>
                                                            <lvc:Separator Step="1" />
                                                        </lvc:Axis.Separator>
                                                    </lvc:Axis>
                                                </lvc:CartesianChart.AxisX>
                                            </lvc:CartesianChart>
                                        </ScrollViewer>

                                        <WrapPanel HorizontalAlignment="Center" Margin="0 2 0 0" Grid.Row="0">
                                            <Button FontFamily="Segoe UI" Background="#7efff5" BorderBrush="Black" BorderThickness="1"  Foreground="Black" Command="{Binding RefreshSubjectCommand}" Width="100" Content="Refresh"></Button>

                                            <Button FontFamily="Segoe UI"  Background="#ffcccc" BorderBrush="Black" BorderThickness="1" Foreground="Black" Margin="5 0 0 0" Command="{Binding RefreshSubjectCommand}" Width="100" Content="Reset"></Button>

                                        </WrapPanel>

                                    </Grid>
                                </TabItem>
                                <TabItem Header="Details">
                                    <Grid Background="Black">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
