                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <WrapPanel Grid.Row="0">
                                <Button Command="{Binding AddTimeTableManager}" Content="Create Time Table Manager" Margin="4 4 0 0" Width="Auto" ToolTip="Thêm" HorizontalAlignment="Left"
                                    Background="#12CBC4" FontWeight="Bold"  Foreground="Black" BorderBrush="Black" BorderThickness="1"></Button>

                                <Button Command="{Binding OuputManagerWordCommand}" Margin="4 4 0 0" Width="100" ToolTip="Thêm"
                                         Padding="0" Background="#feca57" FontWeight="Bold" FontFamily="Segoe UI"  Foreground="Black" BorderBrush="Black" BorderThickness="1">
                                    <WrapPanel>
                                        <Image Margin="-15 0 0 0" Source="/Images/Icon_Button/Word.png"></Image>
                                        <TextBlock VerticalAlignment="Center" Text="   Word"></TextBlock>
                                    </WrapPanel>
                                </Button>

                                <TextBlock Margin="100 0 0 0" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center" Foreground="White" Text="{Binding DateStartTimeTable, UpdateSourceTrigger=PropertyChanged}"></TextBlock>

                                <TextBlock Margin="15 0 0 0" FontSize="16" VerticalAlignment="Center" Foreground="White"  Text="{Binding EndDateTimeTable, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                            </WrapPanel>

