                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.View>
                                                <GridView>
                                                    <GridView.ColumnHeaderContainerStyle>
                                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                                        <Border BorderThickness="0,0,0,0" BorderBrush="Black" Background="Transparent">
                                                                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,0" Width="{TemplateBinding Width}" TextAlignment="Center" />
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="OverridesDefaultStyle" Value="True" />
                                                            <Setter Property="Foreground" Value="Black" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                                            <Setter Property="FontSize" Value="14" />
                                                        </Style>

                                                    </GridView.ColumnHeaderContainerStyle>

                                                    <GridViewColumn Header="TimeStart" DisplayMemberBinding="{Binding TimeLine.TimeStart}" ></GridViewColumn>
                                                    <GridViewColumn Header="EndTime" DisplayMemberBinding="{Binding TimeLine.EndTime}" ></GridViewColumn>
                                                    <GridViewColumn Header="Sunday" DisplayMemberBinding="{Binding Human3.DisplayName}" ></GridViewColumn>
                                                    <GridViewColumn Header="Monday" DisplayMemberBinding="{Binding Human1.DisplayName}" ></GridViewColumn>
                                                    <GridViewColumn Header="Tuesday" DisplayMemberBinding="{Binding Human5.DisplayName}" ></GridViewColumn>
                                                    <GridViewColumn Header="Wednesday" DisplayMemberBinding="{Binding Human6.DisplayName}" ></GridViewColumn>
                                                    <GridViewColumn Header="Thursday" DisplayMemberBinding="{Binding Human4.DisplayName}" ></GridViewColumn>
                                                    <GridViewColumn Header="Friday" DisplayMemberBinding="{Binding Human2.DisplayName}" ></GridViewColumn>
                                                    <GridViewColumn Header="Saturday" DisplayMemberBinding="{Binding Human.DisplayName}" ></GridViewColumn>

                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </ScrollViewer>
                                </materialDesign:Card>
                            </Grid>

                            <materialDesign:Card Grid.Row="3" Margin="4 4 4 4" VerticalAlignment="Stretch">
