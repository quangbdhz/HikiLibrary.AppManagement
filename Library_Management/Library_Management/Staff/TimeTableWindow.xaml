                                                    <GridViewColumn Header="EndTime" DisplayMemberBinding="{Binding TimeLine.EndTime}" ></GridViewColumn>
                                                    <GridViewColumn Header="Sunday" DisplayMemberBinding="{Binding CheckIdHumanSundayWork}" ></GridViewColumn>
                                                    <GridViewColumn Header="Monday" DisplayMemberBinding="{Binding CheckIdHumanMondayWork}" ></GridViewColumn>
                                                    <GridViewColumn Header="Tuesday" DisplayMemberBinding="{Binding CheckIdHumanTuesdayWork}" ></GridViewColumn>
                                                    <GridViewColumn Header="Wednesday" DisplayMemberBinding="{Binding CheckIdHumanWednesdayWork}" ></GridViewColumn>
                                                    <GridViewColumn Header="Thursday" DisplayMemberBinding="{Binding CheckIdHumanThursdayWork}" ></GridViewColumn>
                                                    <GridViewColumn Header="Friday" DisplayMemberBinding="{Binding CheckIdHumanFridayWork}" ></GridViewColumn>
                                                    <GridViewColumn Header="Saturday" DisplayMemberBinding="{Binding CheckIdHumanSaturdayWork}" ></GridViewColumn>

                                                </GridView>
                                            </ListView.View>
