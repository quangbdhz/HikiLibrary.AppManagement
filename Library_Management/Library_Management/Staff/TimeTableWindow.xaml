                                    <WrapPanel HorizontalAlignment="Center">
                                        <TextBlock Visibility="{Binding OptionVisibilityCheckIn}" Margin="5 3 5 0" Text="{Binding TimeWork, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
