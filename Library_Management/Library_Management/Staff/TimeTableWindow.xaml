                        <TextBlock Margin="0 0 1 0" Background="#2d3436" Foreground="White" Padding="5" Text="History" FontSize="15" FontWeight="Bold"></TextBlock>

                        <StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox ItemsSource="{Binding LvHistory}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap" Text="{Binding DisplayName}"></TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>

    </Grid>
</Window>
