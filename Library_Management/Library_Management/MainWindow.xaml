<Window x:Class="Library_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management"
        Icon="/Images/Library_Icon.ico"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:ig="http://schemas.infragistics.com/xaml"
        xmlns:MetroChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart"
        xmlns:uc="clr-namespace:Library_Management.UserControlLibrary"      
        DataContext="{StaticResource MainVM}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Name="mainWindow"
        
        Loaded="Window_Loaded"
        
        FontSize="15"
        mc:Ignorable="d"
        Title="LIBRARY MANAGEMENT" Height="730" Width="1295">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="styleTextBlockInCard" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="Century Gothic" />
        </Style>

        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="230"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GridBackground">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="230"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GridBackground">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <Style x:Key="TransparentStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C2C3C3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#C2C3C3"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="27"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowBitmapEffect x:Key="DropShadowButton" Softness="2" ShadowDepth="5" Color="LightGray" Direction="260"/>
        <Style x:Key="PrimaryButton" TargetType="{x:Type Button}">
            <Setter Property="BitmapEffect" Value="{StaticResource DropShadowButton}"/>
            <Setter Property="Background" Value="#6D78CB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="174"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">

                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonClose">
            <BeginStoryboard x:Name="CloseMenu_BeginStoryboard" Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpen">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="{Binding ColorTheme}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=mainWindow}"></uc:ControlBarUC>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ChangeWidthMenu}"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Width="{Binding ChangeWidthMenu}">
                <Grid x:Name="GridBackground" Background="#55313131" Opacity="0"/>

                <Button x:Name="ButtonOpen" Command="{Binding ChangeWidthMenuCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="30" Height="30" Padding="0">
                    <materialDesign:PackIcon Width="20" Height="20" Kind="Menu" Foreground="{Binding ColorText}"/>
                </Button>

                <Button Margin="0 30 0 0"  Padding="0"  Command="{Binding HomeCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="30" Height="30">
                    <materialDesign:PackIcon Width="20" Height="20" Kind="Home" Foreground="{Binding ColorText}"/>
                </Button>

                <Grid x:Name="GridMenu" Width="180" HorizontalAlignment="Left" Margin="-230 0 0 0" Background="White" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Grid>
                        <Grid Background="{Binding ColorTheme}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0 -0.3 0 0" Background="{Binding ColorTheme}">
                                <Ellipse Height="100" Margin="0 20 0 0" Width=" 100" Stroke="Gray" StrokeThickness="0.7">
                                    <Ellipse.Fill>
                                        <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding GetUrlAvatarStaff}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <TextBlock Text="{Binding UserNameStaff}" FontSize="20" Margin="0 10 0 0" HorizontalAlignment="Center" Foreground="{Binding ColorText}" FontWeight="Bold"/>

                                <TextBlock Text="$ 3,500,00" FontSize="17" Margin="0 5 0 5" HorizontalAlignment="Center" Foreground="#ced6e0" FontWeight="Bold"/>

                            </StackPanel>

                            <Grid Grid.Row="1" Background="{Binding ColorTheme}" Margin="0 0 0 0">
                                <ListView Name="Menu" FontFamily="Champagne &amp; Limousines" Margin="0 5 0 0" FontSize="13" TextElement.Foreground="White">
                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="Timetable" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Time Table" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="Face" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Customer" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="Book" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Book" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="BookInformationVariant" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Info Book" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="BookLock" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Borrow Book" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="BookAccountOutline" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Borrower" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0" Visibility="{Binding OptionVisibilityStatistic}">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="ChartBarStacked" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Statistic" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0" Visibility="{Binding OptionVisibilityStatistic}">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Bill" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="AccountBox" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Staff" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <ListViewItem Height="45" Padding="0">
                                        <StackPanel Orientation="Horizontal" Margin="10 0">
                                            <materialDesign:PackIcon Kind="Support" Width="25" Height="25" Margin="0" Foreground="{Binding ColorText}"/>
                                            <TextBlock Foreground="{Binding ColorText}" Text="Support" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                        </StackPanel>
                                    </ListViewItem>

                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseUp">
                                            <i:InvokeCommandAction Command="{Binding FunctionCommand}"
                                                               CommandParameter="{Binding ElementName=Menu}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ListView>
                            </Grid>

                            <TextBlock Text="Hiki Version 1.0" FontSize="11" Margin="0 0 0 5" HorizontalAlignment="Center" Opacity="0.5" Foreground="{Binding ColorText}" Grid.Row="2"/>
                        </Grid>
                    </Grid>
                    <Button x:Name="ButtonClose" Margin="0 2.5 2.5 0"  Command="{Binding ChangeWidthMenuCommand}" Style="{StaticResource TransparentStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Background="{x:Null}" BorderBrush="{x:Null}" Width="20" Height="20" Padding="0">
                        <materialDesign:PackIcon Kind="Close" Foreground="{Binding ColorText}" Height="20" Width="20"/>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" >
                <Grid.Resources>
                    <Style TargetType="Button" >
                        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth5"></Setter>
                    </Style>
                </Grid.Resources>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition Height="Auto" ></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="2">
                        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <ComboBox SelectedIndex="{Binding OptionTheme}" Width="60" Margin="10 0 0 0" materialDesign:ColorZoneAssist.Mode="{Binding ColorZoneAssistCombobox}" 
                                      VerticalAlignment="Center" HorizontalContentAlignment="Center" Name="BackgroundTheme" BorderBrush="{x:Null}"
                                      materialDesign:TextFieldAssist.DecorationVisibility="Hidden" FontWeight="Bold" Foreground="{Binding ColorText}">
                                <ComboBoxItem Content="Dark"/>
                                <ComboBoxItem Content="Light"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="DropDownClosed">
                                        <i:InvokeCommandAction Command="{Binding GetBackground}"
                                                           CommandParameter="{Binding ElementName=BackgroundTheme}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ComboBox>

                            <Label Foreground="#00a8ff" Name="timelbl" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 3 0 0" FontWeight="Bold" 
                               FontSize="16" FontFamily="Stormfaze">00:00:00</Label>

                            <Label Name="datelbl" Margin="20,2,0,2" Foreground="#00a8ff" FontWeight="Bold" FontSize="16" FontFamily="Stormfaze" 
                               HorizontalAlignment="Center">Sun 01.01.0001</Label>

                        </WrapPanel>

                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border BorderThickness="1" Background="#282c31" BorderBrush="#282c31" Padding="3 0" CornerRadius="10">
                                <Grid  Width="250">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Style="{StaticResource MaterialDesignTextBox}" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                             materialDesign:HintAssist.Hint="Search..." FontSize="13" Text="{Binding ValueSearch}" Margin="8 0 0 0" Grid.Column="0"  Foreground="White"></TextBox>

                                    <Button Grid.Column="1" BorderBrush="{x:Null}"  Background="{x:Null}">
                                        <materialDesign:PackIcon Grid.Column="1" VerticalAlignment="Center" Width="20" Height="20" Margin="8 0 8 0" Foreground="White" Kind="Search" />
                                    </Button>
                                </Grid>
                            </Border>
                        </WrapPanel>

                        <WrapPanel HorizontalAlignment="Right">
                            <Grid>
                                <materialDesign:PopupBox BorderBrush="Transparent" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Padding="0 0">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon Width="20" Height="20" Kind="FacebookMessenger" Foreground="{Binding ColorText}" />
                                    </materialDesign:PopupBox.ToggleContent>


                                    <StackPanel  Background="#2d3436">
                                        <ScrollViewer Name="ListViewScrollViewerMessager"  PreviewMouseWheel="ListViewScrollViewerMessager_PreviewMouseWheel" 
                                        VerticalScrollBarVisibility="Auto" Margin="0 0 0 0" Background="#2d3436" Width="280"  MaxHeight="400">
                                            <StackPanel Margin="8 3"  Background="#2d3436">
                                                <TextBlock Text="Messenger" FontWeight="Bold" Margin="2 2 0 0" FontSize="16" Foreground="White"/>

                                                <Border BorderThickness="1" CornerRadius="20" Background="#333b48" Height="30" Margin="0 5 0 0">
                                                    <WrapPanel VerticalAlignment="Center">
                                                        <materialDesign:PackIcon VerticalContentAlignment="Center" Margin="5 5 0 0" Height="20" Width="20" Kind="Search" Foreground="#c8d6e5" />

                                                        <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" VerticalAlignment="Center"
                                                        Style="{StaticResource MaterialDesignTextBox}" materialDesign:HintAssist.Hint="Search Messenger" FontSize="14" 
                                                        Margin="2 0 0 0"  Foreground="#c8d6e5"></TextBox>
                                                    </WrapPanel>
                                                </Border>

                                                <ListView>
                                                    <ListViewItem Height="50" Padding="0" Margin="0 4 0 0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Column="0">
                                                                <Ellipse Height="45" Width="45" Stroke="Gray" StrokeThickness="0.7">
                                                                    <Ellipse.Fill>
                                                                        <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="/Images/AvatarExample/Emma_Watson.jpg" Stretch="UniformToFill"/>
                                                                    </Ellipse.Fill>
                                                                </Ellipse>

                                                                <Border CornerRadius="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#ff9f43" Margin="0 0 0 0" Width="12" Height="12"/>
                                                            </Grid>

                                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                </Grid.RowDefinitions>

                                                                <Grid Grid.Row="0">
                                                                    <TextBlock VerticalAlignment="Center" Text="Emma Waston" Foreground="White"/>
                                                                </Grid>

                                                                <WrapPanel Grid.Row="1">
                                                                    <TextBlock VerticalAlignment="Center" Text='Halo . 10m' Foreground="#c8d6e5" FontSize="12"/>
                                                                </WrapPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </ListViewItem>

                                                    <ListViewItem Height="50" Padding="0" Margin="0 4 0 0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Column="0">
                                                                <Ellipse Height="45" Width="45" Stroke="Gray" StrokeThickness="0.7">
                                                                    <Ellipse.Fill>
                                                                        <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="/Images/AvatarExample/Crush.jpg" Stretch="UniformToFill"/>
                                                                    </Ellipse.Fill>
                                                                </Ellipse>

                                                                <Border CornerRadius="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#4cd137" Margin="0 0 0 0" Width="12" Height="12"/>
                                                            </Grid>

                                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                </Grid.RowDefinitions>

                                                                <Grid Grid.Row="0">
                                                                    <TextBlock VerticalAlignment="Center" Text="My Crush" Foreground="White"/>
                                                                </Grid>

                                                                <WrapPanel Grid.Row="1">
                                                                    <TextBlock VerticalAlignment="Center" Text='You: I miss you . 20m' Foreground="#c8d6e5" FontSize="12"/>
                                                                </WrapPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </ListViewItem>


                                                    <ListViewItem Height="50" Padding="0" Margin="0 4 0 0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Column="0">
                                                                <Ellipse Height="45" Width="45" Stroke="Gray" StrokeThickness="0.7">
                                                                    <Ellipse.Fill>
                                                                        <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="/Images/AvatarExample/Nick_Fury.jpg" Stretch="UniformToFill"/>
                                                                    </Ellipse.Fill>
                                                                </Ellipse>

                                                                <Border CornerRadius="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#4cd137" Margin="0 0 0 0" Width="12" Height="12"/>
                                                            </Grid>

                                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                </Grid.RowDefinitions>

                                                                <Grid Grid.Row="0">
                                                                    <TextBlock VerticalAlignment="Center" Text="Nick Fury" Foreground="White"/>
                                                                </Grid>

                                                                <WrapPanel Grid.Row="1">
                                                                    <TextBlock VerticalAlignment="Center" Text='Do you want to join the Aven...' Foreground="#2e86de" FontSize="12"/>
                                                                    <TextBlock VerticalAlignment="Center" Text=' . 52m' Foreground="#c8d6e5" FontSize="12"/>
                                                                </WrapPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </ListViewItem>

                                                    <ListViewItem Height="50" Padding="0" Margin="0 4 0 0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Column="0">
                                                                <Ellipse Height="45" Width="45" Stroke="Gray" StrokeThickness="0.7">
                                                                    <Ellipse.Fill>
                                                                        <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="/Images/AvatarExample/Robert_Downey_Jr..jpg" Stretch="UniformToFill"/>
                                                                    </Ellipse.Fill>
                                                                </Ellipse>

                                                                <Border CornerRadius="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#ff9f43" Margin="0 0 0 0" Width="12" Height="12"/>
                                                            </Grid>

                                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                </Grid.RowDefinitions>

                                                                <Grid Grid.Row="0">
                                                                    <TextBlock VerticalAlignment="Center" Text="Robert Downey Jr" Foreground="White"/>
                                                                </Grid>

                                                                <WrapPanel Grid.Row="1">
                                                                    <TextBlock VerticalAlignment="Center" Text='You: Sola Yasuo . 1h' Foreground="#c8d6e5" FontSize="12"/>
                                                                </WrapPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </ListViewItem>

                                                    <ListViewItem Height="50" Padding="0" Margin="0 4 0 0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Column="0">
                                                                <Ellipse Height="45" Width="45" Stroke="Gray" StrokeThickness="0.7">
                                                                    <Ellipse.Fill>
                                                                        <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="/Images/AvatarExample/Chris_Evans.jpg" Stretch="UniformToFill"/>
                                                                    </Ellipse.Fill>
                                                                </Ellipse>

                                                                <Border CornerRadius="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#4cd137" Margin="0 0 0 0" Width="12" Height="12"/>
                                                            </Grid>

                                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                </Grid.RowDefinitions>

                                                                <Grid Grid.Row="0">
                                                                    <TextBlock VerticalAlignment="Center" Text="Chris Evans" Foreground="White"/>
                                                                </Grid>

                                                                <WrapPanel Grid.Row="1">
                                                                    <TextBlock VerticalAlignment="Center" Text="That's your problem. . 3h" Foreground="#c8d6e5" FontSize="12"/>
                                                                </WrapPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </ListViewItem>
                                                </ListView>

                                            </StackPanel>
                                        </ScrollViewer>

                                        <Border BorderBrush="#c8d6e5" BorderThickness="0 0.3 0 0">
                                            <Button Padding="0 -27 0 0" Margin="0 4 0 0" Height="20" Background="#2d3436" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="See All in Messenger" Foreground="#2e86de"/>
                                        </Border>
                                    </StackPanel>

                                </materialDesign:PopupBox>


                                <Border Background="Red" BorderThickness="1" CornerRadius="10" Width="12" Height="12" RenderTransformOrigin="1.867,1.5" Margin="11 0 0 13">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Text="5" FontSize="7"></TextBlock>
                                </Border>
                            </Grid>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>
