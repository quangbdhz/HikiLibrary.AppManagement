                                        <TextBlock Text="Library" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ColorText}"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Column="2" Grid.ColumnSpan="3" Margin="30 20 0 20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <lvc:CartesianChart Grid.Row="0">
                                        <lvc:CartesianChart.Resources>
                                            <Style TargetType="lvc:Separator">
                                                <Setter Property="StrokeThickness" Value="0" />
                                                <Setter Property="Step" Value="1"/>
                                            </Style>
                                        </lvc:CartesianChart.Resources>
                                        <lvc:CartesianChart.Series>
                                            <lvc:RowSeries Fill="{Binding ColorFillCartesianChart}" Values="{Binding ValueScoreHuman}" StrokeThickness="0"/>
                                        </lvc:CartesianChart.Series>
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis  ShowLabels="False" />
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Foreground="{Binding ColorText}"  Labels="{Binding LabelsHuman}" />
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>

                                    <TextBlock HorizontalAlignment="Center" FontSize="12" Grid.Row="1" Text="List Score Partner" Foreground="{Binding ColorText}"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>

                </Grid>


            </Grid>
        </Grid>
    </Grid>
</Window>
